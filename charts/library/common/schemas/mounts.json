{
  "globalMounts": {
    "type": "array",
    "items": {
      "$ref": "#/mountPath"
    }
  },
  "advancedMounts": {
    "type": ["object", "null"],
    "additionalProperties": {
      "type": ["object", "null"],
      "additionalProperties": {
        "$ref": "#/mountPathCollection"
      }
    }
  },
  "mountPathCollection": {
    "type": "array",
    "items": {
      "$ref": "#/mountPath"
    }
  },
  "mountPath": {
    "additionalProperties": false,
    "properties": {
      "path": {
        "type": "string"
      },
      "readOnly": {
        "type": "boolean"
      },
      "subPath": {
        "type": "string"
      },
      "mountPropagation": {
        "type": "string"
      }
    }
  }
}
